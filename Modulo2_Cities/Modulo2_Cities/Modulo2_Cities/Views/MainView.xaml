<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="CursoXamarin.Views.MainView"
             Title="Xamagram">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            <Button 
                Grid.Row="0"
                Text="New"
                Command="***REMOVED***Binding NewCommand***REMOVED***"/>
            <ListView 
                Grid.Row="1"
                ItemsSource="***REMOVED***Binding Cities***REMOVED***"
                SelectedItem="***REMOVED***Binding SelectedItem, Mode=TwoWay***REMOVED***"
                IsRefreshing="***REMOVED***Binding IsBusy, Mode=OneWay***REMOVED***"
                IsPullToRefreshEnabled="True"
                RefreshCommand="***REMOVED***Binding RefreshCommand***REMOVED***">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell
                      ImageSource = "***REMOVED***Binding Image***REMOVED***"
                      Text="***REMOVED***Binding Name***REMOVED***"
                      Detail="***REMOVED***Binding Detail***REMOVED***"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> 
    </Grid>
</ContentPage>